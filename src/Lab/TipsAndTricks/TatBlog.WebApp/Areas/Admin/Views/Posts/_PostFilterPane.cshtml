@using TatBlog.Services.Blogs;
@model TatBlog.WebApp.Areas.Admin.Models.PostFilterModel


@{
    var viewData = ViewData["PagerQuery"] as PagerQuery ?? new PagerQuery { Area = "Admin", Controller = "Posts", Action = "Index" };
}

<div class="mb-4">
    <form method="get"
          class="row gy-2 gx-3 align-items-center"
          asp-area="@viewData.Area"
          asp-controller="@viewData.Controller"
          asp-action="@viewData.Action">
        <div class="col-auto">
            <label class="visually-hidden" asp-for="Keyword"></label>
            <input type="text" class="form-control" placeholder="Nhập từ khóa để tìm kiếm..." asp-for="Keyword">
        </div>
        @*add*@
        <div class="col-auto">
            <label class="visually-hidden" asp-for="AuthorId"></label>
            <select asp-for="AuthorId" asp-items="Model.AuthorList" class="form-select">
                <option value="" selected>-- Chọn tác giả</option>
            </select>
        </div>
        <div class="col-auto">
            <label class="visually-hidden" asp-for="CategoryId"></label>
            <select asp-for="CategoryId" asp-items="Model.CategoryList" class="form-select">
                <option value="" selected>-- Chọn chủ đề</option>
            </select>
        </div>
        <div class="col-auto">
            <label class="visually-hidden" asp-for="Year"></label>
            <input type="text" class="form-control" placeholder="Nhập năm ..." asp-for="Year">
        </div>
        <div class="col-auto">
            <label class="visually-hidden" asp-for="Keyword"></label>
            <select asp-for="Month" asp-items="Model.MonthList" class="form-select">
                <option value="" selected>-- Chọn tháng</option>
            </select>
        </div>
        <div class="col-auto">
            <div class="form-check">
                <label class="form-check-label" asp-for="UnPublished"></label>
                <input class="form-check-input" type="checkbox" asp-for="UnPublished">
            </div>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Tìm/lọc</button>
            <a class="btn btn-info"
               asp-area="@viewData.Area"
               asp-controller="@viewData.Controller"
               asp-action="Index">
                Bỏ lọc
            </a>
            <a class="btn btn-success"
               asp-area="@viewData.Area"
               asp-controller="@viewData.Controller"
               asp-action="Edit">
                Thêm mới
            </a>
        </div>
    </form>
</div>
